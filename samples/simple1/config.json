{
	"id": "simple1App1",
	"name": "simple1App1",
	"loaderConfig": {
		"paths": {
			"simple1App1": "dapp/samples"
		}
	},
	"modules": [
	],
	"controllers": [
		"dapp/controllers/delite/Init",
		"dapp/controllers/delite/Load",
		"dapp/controllers/delite/Transition",
		"dapp/controllers/delite/Logger"
	],

	"dependencies": [
		"deliteful/LinearLayout",
		"deliteful/ViewStack"
	],

	"containerSelector" : "#nested1App1dviewStack",

	"appLogging": {
		"logAll": 1,
		"logTimeStamp": 0,
		"loggingList": [
			"TestTransition"
		//	"app-view:" ,"testApp:"
		//	,"Main:","ViewBase:","View:"
		//	,"controllers/delite/Load:","controllers/delite/Layout:","controllers/delite/Transition:","utils/constraints:"
		]
	},

	"parseOnLoad": true,

	//TODO: There is a problem with using duplicate view names across tests, getting duplicate view error!!!
	//"defaultView": "P1,S1,V1",
	"defaultView": "header1+centerParent+center1+right1+footer1",
//	"defaultView": "centerParent+header1+right1+footer1",
//	"defaultView": "header1",
//	"syncLoadView": true,

	"views": {
		"header1": {
			"constraint": "header",
			"parentSelector": "#headerViewStack",
			"controller": "dapp/samples/simple1/headerController1.js",
			"template": "dapp/samples/simple1/headerTemplate1.html"
		},
		"header2": {
			"constraint": "header",
			"parentSelector": "#headerViewStack",
			"controller": "dapp/samples/simple1/headerController1.js",
			"template": "dapp/samples/simple1/headerTemplate2.html"
		},
		"centerParent": {
			"constraint": "centerParent",
			"syncLoadView": true,
			"parentSelector": "#centerLinearLayout",
			"controller": "dapp/samples/simple1/parentController1.js",
			"template": "dapp/samples/simple1/subParentTemplate.html"
		},
		"center1": {
			"constraint": "center",
			"parentSelector": "#centerViewStack",
			"syncLoadView": true,
			"controller": "dapp/samples/simple1/centerController1.js",
			"template": "dapp/samples/simple1/centerTemplate1.html"
		},
		"center2": {
			"constraint": "center",
			"parentSelector": "#centerViewStack",
			"controller": "dapp/samples/simple1/centerController1.js",
			"template": "dapp/samples/simple1/centerTemplate1.html"
		},
		"right1": {
			"constraint": "right",
			"parentSelector": "#centerLinearLayout",
			"controller": "dapp/samples/simple1/rightController1.js",
			"template": "dapp/samples/simple1/rightTemplate1.html"
		},
		"right2": {
			"constraint": "right",
			"parentSelector": "#centerLinearLayout",
			"controller": "dapp/samples/simple1/rightController1.js",
			"template": "dapp/samples/simple1/rightTemplate1.html"
		},
		"footer1": {
			"constraint": "footer",
			"parentSelector": "#footerViewStack",
			"controller": "dapp/samples/simple1/footerController1.js",
			"template": "dapp/samples/simple1/footerTemplate1.html"
		},
		"footer2": {
			"constraint": "footer",
			"parentSelector": "#footerViewStack",
			"controller": "dapp/samples/simple1/footerController1.js",
			"template": "dapp/samples/simple1/footerTemplate2.html"
		}
	}
}
