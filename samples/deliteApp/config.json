{
	"id": "deliteApp",

	"loaderConfig": {
		"paths": {
			"has" : {
				"requirejs" : {
					"deliteApp": "../deliteApp"
				},
				"!requirejs" : {
					"deliteApp": "../dapp/samples/deliteApp"
				}
			}
		}
	},

	"containerSelector" : "#main",

	"modules": [
	],

	"parseOnLoad": true,

	"dependencies": [
		"deliteful/LinearLayout",
		"deliteful/Button",
		"deliteful/ViewStack"
	],

	"controllers": [
		"dapp/controllers/delite/Logger",
		"dapp/controllers/delite/Init",
		"dapp/controllers/delite/Load",
		"dapp/controllers/delite/Transition"
	],

	"appLogging": {
		"logAll": 1,
		"logTimeStamp": 0,
		"loggingList": [
			"app-view:",
			"controllers/delite/Load:",
			"controllers/delite/Transition:"
		]
	},

	"defaultView": "header+content,home",

	"views": {
		"main": {
			"template": "deliteApp/main.html"
		},
		"header": {
			"constraint": "header",
		//	"parentSelector": "#main",
			"template": "deliteApp/header.html"
		},
		"detail2": {
			"constraint": "main",
			"parentSelector": "#content-view-stack",
			"controller" : "deliteApp/detail.js",
			"template": "deliteApp/detail.html"
		},
		"content": {
			"dependencies": [
				"deliteful/ViewStack"
			],
			"constraint": "main",
		//	"parentSelector": "#main",
			"template": "deliteApp/content.html",
			"controller": "deliteApp/content.js",
			"defaultView": "home",
			"views": {
				"home": {
					"constraint": "content-view-stack",
					"parentSelector": "#content-view-stack",
					"nls": "deliteApp/nls/home",
					"controller" : "deliteApp/home.js",
					"template": "deliteApp/home.html"
				},
				"detail": {
					"constraint": "content-view-stack",
					"parentSelector": "#content-view-stack",
					"controller" : "deliteApp/detail.js",
					"template": "deliteApp/detail.html"
				}
			}
		}//,
